    <context:component-scan base-package = "com"/>

    <bean id="orderService" class="com.Lesson1.OrderService"/>
    <bean id="orderDAO" class="com.Lesson1.OrderDAO"/>

    <bean id="route" class="com.Lesson2.HW1.Route"/>
    <bean id="step" class="com.Lesson2.HW1.Step"/>
    <bean id="service" class="com.Lesson2.HW1.Service"/>

    <bean id="itemDAO" class="com.Lesson2.HW2.ItemDAO"/>
    <bean id="itemService" class="com.Lesson2.HW2.ItemService"/>

    <bean id="GeneralRepository" class="com.Lesson3.HW.DAO.GeneralRepository"/>
    <bean id="FileDAO" class="com.Lesson3.HW.DAO.FileDAO"/>
    <bean id="StorageDAO" class="com.Lesson3.HW.DAO.StorageDAO"/>
    <bean id="FileService" class="com.Lesson3.HW.Service.FileService"/>
